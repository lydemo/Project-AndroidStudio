<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.seu.magiccamera.activity.CameraActivity" >
    <!-- 显示图片 -->
    <com.seu.magiccamera.view.edit.text.MyRelativeLayout
        android:id="@+id/Content_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#EFDFDF"
        android:gravity="center"
        android:layout_weight="0.99">
        <com.seu.magicfilter.widget.MagicImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/poemtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="20dp" />

    </com.seu.magiccamera.view.edit.text.MyRelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_height="120.0dip"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white">
            <ImageView
                android:id="@+id/btn_camera_beauty"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:src="@drawable/btn_camera_beauty"
                android:scaleType="center">
            </ImageView>
            <ImageView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:scaleType="center"
                android:id="@+id/btn_camera_filter"
                android:src="@drawable/btn_camera_filter">

            </ImageView>
        </LinearLayout>
        <include
            android:id="@+id/layout_filter"
            layout="@layout/filter_layout"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"/>
        <include
            android:id="@+id/resultsList"
            layout="@layout/poem_layout"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"/>
        <include
            android:id="@+id/textModify"
            layout="@layout/text_custom_layout"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"/>
    </FrameLayout>

</LinearLayout>